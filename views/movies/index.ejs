<h2>Movie List</h2>

<table border="1">
  <thead>
    <tr>
      <td>Title</td>
      <td>Genre</td>
      <td>Action</td>
    </tr>
  </thead>

  <% movies.forEach((movie) => { %>
    <tr>
      <td><%= movie.title %></td>
      <td>
        <% movie.genreTypes.forEach((genre) => { %>
          <%= genre.genre %>
        <% }) %>   
      </td>
      <td>
        <a href="/show/<%= movie._id %>">View</a>
        <a href="/edit/<%= movie._id %>">Edit</a>
        <a href="/delete/<%= movie._id %>">Delete</a>
      </td>
    </tr>
  <% }) %> 
</table>